<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/bgMain">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_background"
        app:cardBackgroundColor="@color/bgMain">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/bgMain">

            <TextView
                android:id="@+id/categoryTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textColor="@color/pureWhite"
                android:gravity="center"
                android:layout_gravity="left"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/movieTitle"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Movie Name"
                android:background="@color/bgSecondary"
                android:layout_marginTop="7dp"
                android:textColor="@color/pureWhite"
                style="@style/movieTitle"
                android:gravity="center"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:id="@+id/movieIcon"
                    android:layout_width="match_parent"
                    android:layout_height="197dp"
                    android:src="@drawable/sample"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:contentDescription="No Image"/>

                <Button
                    android:id="@+id/btnSeeMore"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_alignBottom="@+id/movieIcon"
                    android:background="#9000"
                    android:text="See More"
                    android:textColor="@android:color/white"/>

                <TextView
                    android:id="@+id/mediaType"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_alignParentEnd="true"
                    android:text="Movie"
                    android:textSize="10sp"
                    android:textColor="@color/navigationFontColor"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/movieDesc"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:maxLines="2"
                android:padding="10dp"
                android:background="@color/bgSecondary"
                android:textColor="@color/pureWhite"
                android:textAlignment="center"
                android:text="An astronaut travels to the outer edges of the solar system to find his father and unravel a mystery that threatens the survival of Earth. In doing so, he uncovers secrets which challenge the nature of human existence and our place in the cosmos."/>

        </LinearLayout>
        <TextView
            android:id="@+id/year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>


    </androidx.cardview.widget.CardView>

</LinearLayout>